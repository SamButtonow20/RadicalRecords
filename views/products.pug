doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Radical Records
    link(rel="stylesheet", href="/styles/styles.css")
  body
    // Navigation Bar
    header
      include partials/navbar

    // Product Listing Section
    section.product-list
      h2 Available Records
      .grid-container
        each product in products
          .product-item
            img(src=`/images/${product.name.toLowerCase().replace(/\s+/g, '')}.jpg`, alt=product.name)
            h3 #{product.name} - #{product.artist}
            p $#{product.price.toFixed(2)}
            a(href=`/details/${product.id}`) View Details

    // Footer
    footer
      p &copy; 2024 Radical Records. All Rights Reserved.
